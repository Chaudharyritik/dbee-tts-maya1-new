[Unit]
Description=Maya1 TTS Backend Service
After=network.target

[Service]
User=root
WorkingDirectory=/root/dbee-tts-maya1-new/backend
ExecStart=/root/dbee-tts-maya1-new/backend/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
Environment=PATH=/root/dbee-tts-maya1-new/backend/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

[Install]
WantedBy=multi-user.target
